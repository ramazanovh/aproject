@model List<Feature>
@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="row align-items-center justify-content-between">
        <h1>Sliders:</h1>
        <a asp-action="create" asp-controller="slider" class="btn btn-primary">Create</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title </th>
                <th scope="col">Icon</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.Title</td>
                    <td>@item.IconFile</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="update" asp-controller="feature" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="feature" asp-route-id="@item.Id" class="btn btn-danger delete-btn">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>